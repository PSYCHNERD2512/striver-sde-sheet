{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "binaries/${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "mkdir -p binaries && g++ -std=c++17 -o binaries/${fileBasenameNoExtension} ${file} && ./binaries/${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
